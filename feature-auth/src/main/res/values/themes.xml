<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MarvelComics" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="titleTextColor">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Widget.ActionButton" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">#C61313</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="backgroundTint">@color/marvelRed</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="RegisterButtonStyle">
        <item name="backgroundTint">@color/lightGray</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="LoginTextFieldStyle" >
        <item name="backgroundTint">#F7F7F7</item>
        <item name="hintTextColor">#B1B1B1</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textSize">@dimen/input_text_text_size</item>
    </style>

    <style name="HeaderTitleStyle" >
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="color">@color/almostBlack</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>
</resources>